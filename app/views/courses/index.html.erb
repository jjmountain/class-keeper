<main>
  <div class="sb-page-header pb-10 sb-page-header-dark bg-gradient-primary-to-secondary">
      <div class="container-fluid">
          <div class="sb-page-header-content py-5">
              <h1 class="sb-page-header-title">
                  <div class="sb-page-header-icon"><i data-feather="book-open"></i></div>
                  <div class="d-flex justify-content-between w-100">
                    <span>Courses</span><%= link_to new_course_path do %><button class="btn btn-outline-light" type="button"><i data-feather="plus"></i></button><% end %>
                  </div>
              </h1>
          </div>
      </div>
  </div>
  <div class="container-fluid mt-n10">
    <ul id="course-tabs" class="nav nav-tabs" id="myTab" role="tablist">
      <% current_user.schools.each_with_index do | school, index |  %>
        <li class="nav-item">
          <a class="nav-link <%= index == 0 ? 'active' : '' %>" id="<%= school.id %>-tab" data-toggle="tab" href="#tab<%= school.id %>" role="tab" aria-controls="<%= school.id %>" aria-selected="true"><%= school.name %></a>
        </li>
      <% end %>
    </ul>

    <div class="tab-content" id="myTabContent">
      <% current_user.schools.each_with_index do | school, index | %>
        <div class="tab-pane show <%= index == 0 ? 'active' : '' %>" id="tab<%= school.id %>" role="tabpanel" aria-labelledby="<%= school.id %>-tab">
          <div class="row">
            <% current_user.courses.each do | course | %>
              <% if course.school == school %>
                <%= render partial: "course_card", locals: { course: course } %>
              <% end %>
            <% end %>
          </div>
        </div>
        <% end %>
    </div>
  </div>
</main>