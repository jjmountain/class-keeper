<table id='dttb' class='table table-hover'>
  <thead>
    <tr>
      <th>Week</th>
      <th>Lesson Date</th>
      <th>Period</th>
      <th>Activities</th>
      <th>Homework</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% lessons.each do | lesson | %>
      <tr>
        <td><%= lesson.week %></td>
        <td><%= lesson.date_with_day(lesson.date) %></td>
        <td><%= lesson.course_period.period.period_number %></td>
        <td></td>
        <td></td>
        <td><%= link_to "Enter", lesson_path(lesson) %></td>
      </tr>
  <% end %>
  </tbody>
</table>