<div class="card col-12">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-top">
      <h5 class="card-title"><%= link_to course.name, course_path(course) %></h5>
        <span>
        <% course.course_periods.each do | course_period | %>
        <h6 class="card-subtitle mb-2 text-muted">
          <%= course_period.day.capitalize %>: <%= course_period.period.class_time %>
        </h6>
        <% end %>
      </span>
    </div>
    <h6 class="card-subtitle mb-2 text-muted"><%= course.faculty.name %></h6>
    <p class="card-text"><%= course.description %></p>
      <div class='d-flex justify-content-between'>
        <%= link_to "Edit", edit_course_path(course) %>
        <%= link_to "Delete", course_path(course), method: :delete, data: { confirm: "Are you sure?" } %>
      </div>
  </div>
</div>