<div class="card col-12 col-md-6 col-lg-4" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title" style='display: inline-block;'><%= course.name %></h5>
    <span class="card-subtitle mb-2 text-muted"><%= course.period.class_time %></h6>
    <h6 class="card-subtitle mb-2 text-muted"><%= course.faculty %></h6>
    <p class="card-text"><%= course.description %></p>
    <%= link_to "Enter", course_path(course), class: 'card-link' %>
  </div>
</div>