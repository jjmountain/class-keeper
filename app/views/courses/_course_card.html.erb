<div class="card course-card col-12 border-bottom">
  <div class="card-body">
    <div class="d-flex justify-content-between">
      <div class='d-flex align-items-top'><h5 class="card-title"><%= link_to course.name, course_path(course) %></h5><span id="course-number-badge" class="badge badge-light"><%= course.class_number %></span></div>

        <span>
        <% course.course_periods.each do | course_period | %>
        <span class="card-subtitle mb-2 text-muted">
          <%= course_period.day.capitalize %> <%= course_period.period.class_time %>
        </span>
        <% end %>
      </span>
    </div>
    <h6 class="card-subtitle mb-2 course-card-faculty"><%= course.faculty.name %></h6>
    <p class="card-text"><%= course.description %></p>
      <div class='d-flex justify-content-end'>
        <%= link_to edit_course_path(course), class: 'btn sb-btn-transparent-dark sb-btn-icon' do %> <i data-feather="edit"></i><% end %>
        <%= link_to course_path(course), method: :delete, data: { confirm: "Are you sure you want to delete #{course.name}?" }, class: 'btn sb-btn-transparent-dark sb-btn-icon' do %> 
          <i data-feather="trash"></i>
        <% end %>
      </div>
  </div>
</div>