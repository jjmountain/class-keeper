<div class="card col-12">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-top">
      <h5 class="card-title"><%= course.name %></h5>
        <span>
        <% course.course_periods.each do | course_period | %>
        <h6 class="card-subtitle mb-2 text-muted">
          <%= course_period.day.capitalize %>: <%= course_period.period.class_time %>
        </h6>
        <% end %>
      </span>
    </div>
    <h6 class="card-subtitle mb-2 text-muted"><%= course.faculty.name %></h6>
    <p class="card-text"><%= course.description %></p>
    <%= link_to "Enter", course_path(course), class: 'card-link' %>
  </div>
</div>