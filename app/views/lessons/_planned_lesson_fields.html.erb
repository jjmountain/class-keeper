<div class='nested-fields'>
    <%= f.hidden_field :_destroy %>
    <%= f.hidden_field :date, value: ''  %>
    <%= f.hidden_field :course_period_id %>
  <div class='planned-lessons-grid' style='grid-template-columns: 1fr 1fr 1fr 2fr 1fr 1fr;'>
    <div class='d-flex align-items-center justify-content-end'>
      <div class="lesson-week">
      Week <%= f.object.week %>
      </div>
    </div>
    <div class='d-flex align-items-center justify-content-end'>
      <div class="lesson-day">
        <%= f.object.course_period.day %>
      </div>
    </div>
    <div class='d-flex align-items-center justify-content-end'>
      <div class="lesson-period">
        Period <%= f.object.course_period.period.period_number %>
      </div>
    </div>
      <div class='d-flex align-items-center justify-content-end'>
      <div class="lesson-date"> 
            <%= f.object.date.strftime('%b %d, %Y')  %>
      </div>
      </div>
      <div class='d-flex align-items-center justify-content-end'>
        <button class="btn sb-btn-transparent-dark sb-btn-icon btn-sm sb-btn-icon remove_fields" type="button">
          <i data-feather="trash-2"></i>
        </button>
      </div>
      <div class='d-flex align-items-center justify-content-end'>
        <div class='custom-control custom-checkbox sb-custom-control-solid d-flex align-items-center'>
          <%= f.check_box :holiday %>
        </div>
      </div>
  </div>
</div>